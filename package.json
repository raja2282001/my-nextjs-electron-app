{
  "name": "my-nextjs-electron-app",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
  "dev:next": "cd next && npm run dev",
  "dev:electron": "wait-on tcp:3000 && electron .",
  "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
  "build:next": "cd next && npm run build",
  "build:electron": "electron-builder",
  "package:win": "npm run build:next && npm run build:electron -- --win",
  "package:mac": "npm run build:next && npm run build:electron -- --mac",
  "package:linux": "npm run build:electron -- --linux"
},
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^24.6.0",
    "wait-on": "^7.0.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.myapp.nextjs.electron",
    "productName": "MyNextJSElectronApp",
    "directories": {
      "buildResources": "next/public",
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "next/out/**/*",
      "next/public/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
